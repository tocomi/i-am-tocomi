---
import { Image } from 'astro:assets'
import zennLogo from '@/assets/logo/zenn.svg'
import hatenaLogo from '@/assets/logo/hatena.svg'
import type { Blog } from '@/content/types'

type Props = {
  platform: NonNullable<Blog['external']>['platform']
}

const { platform } = Astro.props
---

<>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="mb-3 ml-[-4px] inline h-4 w-4"
    fill="none"
    viewBox="0 0 24 24"
    stroke="#888"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
    ></path>
  </svg>
  {
    platform === 'zenn' && (
      <Image src={zennLogo} alt="Zenn" class="mb-1 ml-1 inline h-5 w-5" />
    )
  }
  {
    platform === 'hatena' && (
      <Image src={hatenaLogo} alt="Hatena Blog" class="mb-1 inline h-7 w-7" />
    )
  }
</>
