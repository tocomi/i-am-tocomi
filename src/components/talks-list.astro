---
import { talks } from '@/content/talks'
---

{
  talks.length > 0 && (
    <section class="mt-8">
      <h2 class="text-2xl font-bold mb-4">ÁôªÂ£á</h2>
      <ul class="space-y-3">
        {talks.map(talk => (
          <li class="border-l-2 border-gray-300 pl-4">
            <div class="flex flex-col gap-1">
              <div class="text-sm text-gray-600">
                {talk.date.toLocaleDateString('ja-JP', {
                  year: 'numeric',
                  month: '2-digit',
                  day: '2-digit',
                })}
              </div>
              <div class="font-semibold">
                <a
                  href={talk.eventUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-600 underline hover:text-blue-800"
                >
                  {talk.eventName}
                </a>
              </div>
              <div class="text-gray-700">
                {talk.slideUrl ? (
                  <a
                    href={talk.slideUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-sm text-blue-500 hover:text-blue-700 hover:underline"
                  >
                    üìù {talk.title}
                  </a>
                ) : (
                  <span class="text-sm text-gray-700">{talk.title}</span>
                )}
              </div>
            </div>
          </li>
        ))}
      </ul>
    </section>
  )
}
